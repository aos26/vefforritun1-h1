{
  "name": "Hopverkefni1",
  "version": "1.0.0",
  "description": "Verkefnið felst í því að smíða vef eftir forskrift.",
  "main": "index.js",
  "scripts": {
    "browser-sync": "browser-sync start --server --files index.html styles.scss",
    "sass": "node-sass --source-map-embed styles.scss styles.css",
    "sass-watch": "node-sass --source-map-embed --watch *scss --recursive styles.css",
    "dev": "npm-run-all --parallel sass browser-sync",
    "lint-css": "stylelint styles.css --syntax css",
    "lint-scss": "stylelint styles.scss --syntax scss"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/eokristjans/hopv1-veff1.git"
  },
  "keywords": [],
  "author": "Alexander Þór, Andrea Ósk og Erling Óskar",
  "license": "ISC",
  "devDependencies": {
    "browser-sync": "^2.18.13",
    "npm-run-all": "^4.1.3",
    "stylelint": "^9.6.0",
    "stylelint-config-primer": "^2.2.10"
  },
  "bugs": {
    "url": "https://github.com/eokristjans/hopv1-veff1/issues"
  },
  "homepage": "https://github.com/eokristjans/hopv1-veff1#readme",
  "dependencies": {
    "node-sass": "^4.9.3"
  }
